	pages = {168--175},
	file = {Jordan et al. - 2014 - Using fossil leaves as evidence for open vegetatio.pdf:/Users/cdmuir/Zotero/storage/32TLIHSZ/Jordan et al. - 2014 - Using fossil leaves as evidence for open vegetatio.pdf:application/pdf}
